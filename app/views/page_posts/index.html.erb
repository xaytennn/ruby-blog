<p id="notice"><%= notice %></p>

<h1><%= I18n.t('page_posts.index.posts') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('page_posts.index.title') %></th>
      <th><%= t('page_posts.index.body') %></th>
      <th><%= t('page_posts.index.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_posts.each do |page_post| %>
      <tr>
        <td><%= page_post.title %></td>
        <td><%= page_post.body %></td>
        <td><%= page_post.user.email %></td>
        <td><%= link_to t('page_posts.index.show'), page_post %></td>
        <td><%= link_to t('page_posts.index.edit'), edit_page_post_path(page_post) %></td>
        <td><%= link_to t('page_posts.index.destroy'), page_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('page_posts.index.new_post'), new_page_post_path %>
